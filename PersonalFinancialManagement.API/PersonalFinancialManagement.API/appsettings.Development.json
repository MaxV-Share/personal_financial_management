{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=127.0.0.1,1438;Database=personal_financial_management;User Id=sa;Password=Admin@123;TrustServerCertificate=True",
    "MigrationConnection": "Server=127.0.0.1,1438;Database=personal_financial_management;User Id=sa;Password=Admin@123;TrustServerCertificate=True",
    "MongoConnection0": ""
  },
  "MongoDbSettings": {
    "DBProvider": "mongodb",
    "ConnectionString": "mongodb://localhost:27018",
    "DatabaseName": "SampleDb"
  },
  "AdminRoleName": "Admin",
  "JWT": {
    "ValidAudience": "User",
    "ValidIssuer": "https://localhost:5000",
    "Secret": "DEV_ABCDEFGHIJKLMNOPQRSTUVWXYZ"
  },
  "CorsOptions": {
    "PolicyName": "",
    "AllowedOrigins": [
      "*"
    ],
    "AllowedMethods": [
      "*"
    ],
    "AllowedHeaders": [
      "*"
    ],
    "ExposedHeaders": [
      "Token-Expired"
    ],
    "PreflightMaxAgeInMinutes": 10
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.MSSqlServer",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Elasticsearch",
      "Serilog.Sinks.MongoDB"
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Orverride": {
        "Microsoft": "Error",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Verbose"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithExceptionDetails"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
            "restrictedToMinimumLevel": "Information",
            "outputTemplate": "[{Timestamp:u}] [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": ".\\Logs\\Log-.json",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "name": "MSSqlServer",
        "args": {
          "restrictedtominimumlevel": "Information",
          "connectionstring": "Server=127.0.0.1,1438;Database=personal_financial_management;User Id=sa;Password=Admin@123;TrustServerCertificate=True",
          "tablename": "Logs2",
          "schemaName": "dbo",
          "autoCreateSqlTable": true,
          "columnOptionsSection": {
            "addStandardColumns": [
              "LogEvent"
            ], /* Use JSON Column LogEvent */
            "removeStandardColumns": [
              "Properties"
            ] /* Remove XML Column Properties */
          }
        }
      },
      {
        "name": "elasticsearch",
        "args": {
          "nodeuris": "http://localhost:9200",
          "username": "elastic",
          "password": "admin",
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "MongoDBBson",
        "Args": {
          "databaseUrl": "mongodb://root:example@127.0.0.1:27018/PFMLogs",
          "collectionName": "logs",
          "cappedMaxSizeMb": "1024",
          "cappedMaxDocuments": "50000",
          "rollingInterval": "Month",
          "restrictedToMinimumLevel": "Debug"
        }
      } 
    ]
  },
  "ElasticConfiguration": {
    "Uri": "http://localhost:9200",
    "Username": "elastic",
    "Password": "admin",
    "PrefixIndexFormat": "pfmlogs"
  }
}