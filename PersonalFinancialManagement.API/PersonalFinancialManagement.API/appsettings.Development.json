{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=127.0.0.1,1438;Database=personal_financial_management;User Id=sa;Password=Admin@123;TrustServerCertificate=True",
    "MigrationConnection": "Server=127.0.0.1,1438;Database=personal_financial_management;User Id=sa;Password=Admin@123;TrustServerCertificate=True",
    "MongoConnection0": ""
  },
  "MongoDbSettings": {
    "DBProvider": "mongodb",
    "ConnectionString": "mongodb://localhost:27018",
    "DatabaseName": "SampleDb"
  },
  "AdminRoleName": "Admin",
  "JWT": {
    "ValidAudience": "User",
    "ValidIssuer": "https://localhost:5000",
    "Secret": "DEV_ABCDEFGHIJKLMNOPQRSTUVWXYZ"
  },
  "CorsOptions": {
    "PolicyName": "",
    "AllowedOrigins": [ "*" ],
    "AllowedMethods": [ "*" ],
    "AllowedHeaders": [ "*" ],
    "ExposedHeaders": [ "Token-Expired" ],
    "PreflightMaxAgeInMinutes": 10
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer", "Serilog.Sinks.Console", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Orverride": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Verbose"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Verbose"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": ".\\Logs\\Log-.json",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "name": "MSSqlServer",
        "args": {
          "restrictedtominimumlevel": "Verbose",
          "connectionstring": "Server=127.0.0.1,1438;Database=personal_financial_management;User Id=sa;Password=Admin@123;TrustServerCertificate=True",
          "tablename": "Logs2",
          "schemaName": "dbo",
          "autoCreateSqlTable": true,
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ], /* Use JSON Column LogEvent */
            "removeStandardColumns": [ "Properties" ] /* Remove XML Column Properties */
          }
        }
      },
      {
        "name": "elasticsearch",
        "args": {
          "nodeuris": "http://localhost:9200",
          "username": "elastic",
          "password": "admin"
        }
      }
    ]
  },
  "ElasticConfiguration": {
    "Uri": "http://localhost:9200",
    "Username": "elastic",
    "Password": "admin",
    "PrefixIndexFormat": "pfmlogs"
  }
}
